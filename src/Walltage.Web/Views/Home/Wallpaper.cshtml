@model Walltage.Service.Models.WallpaperViewModel
@using Walltage.Service.Helpers

@{
    ViewBag.Title = "Wallpaper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="detail-section">
    <aside class="sidebar">
        <div class="properties">
            <h2>Properties</h2><hr />
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Resolution</th>
                        <td>:</td>
                        <td>@Model.ResolutionName</td>
                    </tr>
                    <tr>
                        <th>Size</th>
                        <td>:</td>
                        <td>@Model.Size KB</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>:</td>
                        <td>@Model.CategoryName</td>
                    </tr>
                    <tr>
                        <th>Views</th>
                        <td>:</td>
                        <td>@Model.ViewCount</td>
                    </tr>
                    <tr>
                        <th>Added</th>
                        <td>:</td>
                        <td>@WebHelper.TimeAgo(Model.UploadDate)</td>
                    </tr>
                    <tr>
                        <th>Uploaded By</th>
                        <td>:</td>
                        <td><a href="~/user/@Model.UploaderId">@Model.UploaderName</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="tags">
            <h2>Tags</h2><hr />
            <ul>
                @{
                    if (Model.TagList.Count > 0)
                    {
                        foreach (var item in Model.TagList)
                        {
                            <li><a href="/home/tag/@item.Id">@item.Name</a></li>
                        }
                    }
                }
            </ul>
        </div>
        <p>
            <a href="btn btn-warning pull-left"><i class="fa fa-star"></i> Add to Favorites</a>
            <a href="btn btn-warning pull-right"><i class="fa fa-warning"></i> Report</a>
        </p>
    </aside>
    <div class="showcase">
        <img class="wallpaper unselectable" src="@Url.Content("~/uploads/" + @Model.ImgPath)" alt="@Model.Name" />
    </div>
</section>
