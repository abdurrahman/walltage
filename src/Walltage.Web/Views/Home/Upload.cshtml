@model Walltage.Service.Models.WallpaperViewModel
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="upload-section">
    <div class="container">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("Upload", "Account", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                <h4>Upload a wallpaper</h4>
                <h6>Notice: You may take a look <a href="">uploading terms.</a> </h6>
                @ViewBag.Message
                <hr />
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Tags, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Tags, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Tags, "", new { @class = "text-danger" })
                            <span class="help-block">Ex: Assasins Creed, Terminator, Adriana Lima etc.</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ResolutionId, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.ResolutionId, new SelectList(Model.ResolutionList), "--Select", new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.ResolutionId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryId, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.CategoryList), "--Select", new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-2">
                        <input type="text" class="input-sm upload-text" placeholder="Choose File" disabled="disabled" />
                        <div class="btn btn-primary btn-sm file-upload-btn ">
                            <span>Pick a wallpaper !</span>
                            @Html.TextBox("file", "", new { type = "file", @class = "upload-btn" })
                        </div>

                    </div>
                </div>

                <button type="submit" class="btn btn-default">Upload</button>
            }
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/dropzonejs")
    @Scripts.Render("~/bundles/jqueryval")
}