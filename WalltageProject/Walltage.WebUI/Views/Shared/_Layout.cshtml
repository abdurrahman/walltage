<!DOCTYPE html>
<html>
<head>
    <!-- META Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Walltage</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keyword" content="@ViewBag.Keyword" />
    <meta name="author" content="Abdurrahman ISIK" />
    <!-- CSS Files -->
    <link href="~/assets/css/font-awesome.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/css")
    <!-- JS Files -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularlib")
    <!-- Font & Favicon -->
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic" rel='stylesheet' type='text/css' />
    <link href='http://fonts.googleapis.com/css?family=Dosis:200,400,500,600,800&subset=latin,latin-ext' rel='stylesheet' type='text/css' />
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon" />
    <!-- Google Analytics Code -->

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand" title="Walltage">Walltage</a>
                </div>

                <div class="collapse navbar-collapse" id="main-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="~/home/top100"><i class="fa fa-sort-amount-asc"></i> Top 100 <span class="sr-only">(current)</span></a></li>
                        <li><a href="~/home/mostviewed"><i class="fa fa-eye"></i> Most Viewed</a></li>
                        <li><a href="~/home/random"><i class="fa fa-random"></i> Random</a></li>
                        <li><a href="~/home/comments"><i class="fa fa-comments"></i> Comments</a></li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                  @*<form class="navbar-form navbar-right" role="search">
                     <div class="form-group">
                      <input type="text" class="form-control" placeholder="Search">
                    </div>
                      <a href="~/account/register" type="submit" class="btn btn-success">Register</a>
                      <a href="~/account/login" type="submit" class="btn btn-warning">Login</a>
                  </form>*@
                </div>
            </div>
        </nav>

        <!-- Content -->
        @RenderBody()

        <div class="footer-ghost"></div>
    </div>
    <footer>
        <ul>
            <li><a href="https://twitter.com/walltage" class="fa fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="https://www.facebook.com/pages/Walltage/702957579746423?ref=hl" class="fa fa-facebook"><span class="label">Facebook</span></a></li>
            <li><a href="https://github.com/xJason21/Walltage" class="fa fa-github"><span class="label">GitHub</span></a></li>
            <li><a href="mailto:walltageweb@gmail.com" title="Say Hello !" class="fa fa-envelope"><span class="label">Email</span></a></li>
        </ul>
        <ul class="copyright">
            <li>@DateTime.Now.AddYears(-1).Year &copy; Walltage. All rights reserved.</li>
            <li>Made with <i class="fa fa-heart"></i>in Istanbul, Turkey </li>
        </ul>
    </footer>

    <!-- Script Files -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
